<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <ImageView
        android:id="@+id/ivAnime"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:background="@color/black"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNameAnime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="NameAnime"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/ivAnime"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCountAnime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CountOfAnime"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvNameAnime"
        app:layout_constraintTop_toBottomOf="@+id/tvNameAnime" />

</androidx.constraintlayout.widget.ConstraintLayout>